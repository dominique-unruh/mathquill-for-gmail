{
  "manifest_version": 2,
  "name": "MathQuill for Gmail",
  "version": "0.1.0",
  "description": "WYSIWYG editing of math in Gmail (and possibly other pages)",
  "homepage_url": "https://github.com/dominique-unruh/mathquill-for-gmail/wiki",

  "permissions": ["storage","activeTab"],

  "applications": {
    "gecko": {
      "id": "mathquill-for-gmail@unruh.de"
    }
  },

  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
    
  "browser_action": {
    "default_icon": "icon.svg",
    "default_title": "MathQuill for Gmail",
    "default_popup": "toolbar-menu.html"
  },

  "options_ui": {
    "page": "options.html"
  },
  
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/mail/*",
		  "https://cdn.rawgit.com/dominique-unruh/mathquill-for-gmail/b1d6409/mathquill-for-gmail-options.html"
		 ],
      "js": ["jquery.min.js",
             "mathquill.min.js",
             "browser-polyfill.min.js",
             "shared.js",
             "mathquill-for-gmail.js"]
    }
  ]
}

